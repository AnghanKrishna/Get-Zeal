<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="350sp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In to Earn Great Zeals!!"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textAlignment="center"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etsignup_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_round"
                android:drawableLeft="@drawable/user_green"
                android:drawablePadding="10dp"
                android:hint="|   FullName"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/darkgreen" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etsignup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_round"
                android:drawableLeft="@drawable/mail_outline_green"
                android:drawablePadding="10dp"
                android:hint="|   Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/darkgreen" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etsignup_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_round"
                android:drawableLeft="@drawable/key_green"
                android:drawablePadding="10dp"
                android:hint="|   Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/darkgreen" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsignup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_btn_green"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>