<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.getzeals">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/zeal_logo_white"
        android:label="Get Zeals"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GetZeals">

        <activity
            android:name=".ui.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.SidebarProfileActivity" />
        <activity android:name=".ui.FiltersActivity" />
        <activity android:name=".ui.OfferDetailActivity" />
        <!-- sidebar-->
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.SignupBusinessPartner" />
        <activity android:name=".ui.SigninBusinessPartner" />
        <!-- profile sidebar -->
        <activity android:name=".ui.ProfileAccount" />
        <activity android:name=".ui.ProfileSettings" />
        <activity android:name=".ui.ProfileEarning" />
        <activity android:name=".ui.ProfileBankAccount" />
    </application>

</manifest>